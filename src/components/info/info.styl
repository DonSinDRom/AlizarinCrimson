.md-tabs-content
  height calc(100vh - 60px)

@media screen and (min-width: 1024px)
  .tabs__icon
    display none
@media screen and (max-width: 1023px)
  .tabs__full
    display none

@media screen and (min-width: 600px)
  #tabOnline
  #tabOnline-content
    display none !important

/* Chat and Online modules media-queries */
@media screen and (max-width: 600px)
  .chat__md-content
    flex 0 0 100%
@media screen and (min-width: 600px) and (max-width: 860px)
  .chat__md-content
    flex 0 0 80%
  .online__include
    flex 0 0 20%
@media screen and (min-width: 861px) and (max-width: 960px)
  .chat__md-content
    flex 0 0 85%
  .online__include
    flex 0 0 15%
@media screen and (min-width: 961px) and (max-width: 1024px)
  .chat__md-content
    flex 0 0 82.5%
  .online__include
    flex 0 0 17.5%
@media screen and (min-width: 1025px)
  .chat__md-content
    flex 0 0 80%
  .online__include
    flex 0 0 20%
