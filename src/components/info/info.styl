@media screen and (min-width: 601px)
  .md-tabs-content
    height -webkit-calc(100% - 60px) /* 60px(tabsdemoStaticTabs .md-header) */
    height calc(100% - 60px) /* 60px(tabsdemoStaticTabs .md-header) */
@media screen and (max-width: 600px)
  .md-tabs-content
    height -webkit-calc(100% - 72px) /* 36px(tabsdemoStaticTabs .md-header) + 36px(.playlist__toolbar, .playlist__toolbar-tools)*/
    height calc(100% - 36px) /* 36px(tabsdemoStaticTabs .md-header) + 36px(.playlist__toolbar, .playlist__toolbar-tools)*/

/* Use icon fallback instead of text in md-tabs for small screens */
@media screen and (min-width: 1024px)
  .tabs__icon
    display none
@media screen and (max-width: 1023px)
  .tabs__full
    display none
