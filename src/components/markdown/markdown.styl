.markdown__ctrl
  width 100vw
  height 100vh
  background-color #ddd
  display flex
  flex-flow row wrap
.markdown__toolbar
  width 100%
  height 45px
  background-color #fff
  display flex
  flex 1 100%
  margin 10px
.markdown__editor
  background-color #888 !important
  display flex
  flex 1 calc(50% - 25px)
  height calc(100% - 95px)
  margin 0 5px 10px 10px
.markdown__preview
  background-color #888 !important
  display flex
  flex 1 calc(50% - 25px)
  height calc(100% - 95px)
  margin 0 10px 10px 5px
