.chat
  font-size 13px
  height 100%
  color #000
  & .chat__module
    height 100%
  & .chat__list
    height 100%
.chat__input-grp
  position absolute
  bottom 0
  width 100%
  border-top 3px solid #bbb
  height 90px
  margin 0
  padding 0
  display flex
  flex-flow row wrap
  & md-input-group
  & .md-input-group
    margin 0
    padding 0
    width 100%
    & input
      width 100%
      height 46px
    &.md-input-focused
      & input
        border-color #FFCD00 !important
        height 46px
      & label
        color #FFCD00 !important
  & .chat__input-nav
    height 24px
    display flex
    align-self flex-end
    flex 1 100%
    justify-content flex-start
    align-items center
    & .chat__checkbox--tink
    & .chat__checkbox--img
      display inline
      margin 0
      font-size 11px
      padding 0 6px
      margin-bottom 8px
      & .md-label
        vertical-align text-top
        margin-left 4px
        border none !important
        margin-bottom 2px
    & .chat__button--bold
    & .chat__button--irony
      text-decoration none
      text-transform none
      font-size 12px
      margin-bottom 4px
      & .md-button-inner
        padding 0 6px
    & .chat__button--bold
      font-weight 800
    & .chat__button--irony
      font-style italic
      color red
.chat__md-content
  height calc(100% - 90px)
  overflow-x hidden
.chat__item
  border-bottom 1px solid #eee
  & .md-tile-content
    padding 6px
    display flex
    flex-flow row nowrap
.msg__author
  font-weight bold
  display flex
  padding-right 6px
.msg__message
  display flex
  flex 1
.msg__time
  display flex
  min-width 100px


