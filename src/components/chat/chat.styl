.chat
  font-size 13px
  height 100%
  color colorChat
  body[theme='dark'] &
    color darkChat
  & .chat__module
    height 100%
    overflow hidden
    display flex
    flex-flow row wrap
  & .chat__list
    height 100%
    width 100%
    padding 0

.chat__module--extended
  & .chat__md-content
  & .online__include
    height "calc(100% - %s)" % (chatInputHeight*2)
  & .chat__input-grp
    height (chatInputHeight*2)

.chat__input-grp
  width 100%
  height chatInputHeight /* depend with .chat__md-content */
  margin 0
  padding 0
  display flex
  flex 1 100%
  flex-flow row wrap
  transition height .4s ease
  border-top 3px solid colorChatInputBorder
  background-color colorChatInputBG
  body[theme='dark'] &
    border-top 3px solid darkChatInputBorder
    background-color darkChatInputBG
  & md-input-container
    position relative
    margin 0
    padding 0 6px
    width 100%
    overflow hidden
    & .md-input
      padding 0 6px !important
      line-height 1 !important
      width 100%
      margin-bottom chatInputBottomHeight /* 24px = chat__input-nav heigth = used for char's limit meter and chat settings */
      overflow auto
      font-size 12px
      color colorChatInput
      body[theme='dark'] &
        color darkChatInput
    &.md-input-focused
      & .md-input
        height (chatInputHeight - chatInputBottomHeight)
        border-color colorChatInputFocus !important
        body[theme='dark'] &
          border-color darkChatInputFocus !important
      & label
        color colorChatInputFocus !important
        body[theme='dark'] &
          color darkChatInputFocus !important
  & .chat__input-nav
    position absolute
    bottom 0
    left 0
    right 0
    height chatInputBottomHeight /* depend with .md-input*/
    display flex
    align-self flex-end
    flex 1 100%
    justify-content flex-start
    align-items center
    & .chat__checkbox--tink
    & .chat__checkbox--img
      display inline
      margin 0
      font-size 11px
      padding 0 6px
      margin 0
      height 100%
      & .md-label
        vertical-align text-top
        margin-left 4px
        border none !important
        margin-bottom 2px
    & .chat__button--bold
    & .chat__button--irony
      text-decoration none
      text-transform none
      font-size 12px
      margin 0
      padding 0 4px
      height 100%
      & .md-button-inner
        padding 0 6px
    & .chat__button--bold
      font-weight 800
    & .chat__button--irony
      font-style italic
      color colorChatInputIrony
      body[theme='dark'] &
        color darkChatInputIrony
.chat__md-content
  overflow-x hidden
  display flex
  flex-flow column nowrap
  transition height .4s ease
  flex 1 1 calc(100% - 8rem) /* 8rem - 1 row for online users */
  height "calc(100% - %s)" % chatInputHeight /* depend with .chat__input-grp */
.chat__item
  border-bottom 1px solid colorChatItemBorder
  background-color colorChatItemBG
  body[theme='dark'] &
    border-bottom 1px solid darkChatItemBorder
    background-color darkChatItemBG
  & .md-tile-content
    padding 6px
    display flex
    flex-flow row nowrap
    &.private
      background colorChatItemPrivateBG
      body[theme='dark'] &
        background darkChatItemPrivateBG
    &.personal
      font-weight bold
.msg__author
  font-weight bold
  display flex
  padding-right 6px
  color colorChatItemAuthor
  body[theme='dark'] &
    color darkChatItemAuthor
.msg__message
  display flex
  flex 1
  flex-wrap wrap
  word-wrap break-word
  & .reference
    color colorChatReference
    body[theme='dark'] &
      color darkChatReference
  & img
    object-fit contain
    width 100%
  & b
    font-weight bold
  & .irony
    font-style italic
    color colorChatInputIrony
    body[theme='dark'] &
      color darkChatInputIrony
.msg__time
  font-size 10px
  justify-content flex-end
  display flex
  min-width 48px
  color colorChatItemTime
  body[theme='dark'] &
    color darkChatItemTime

.chat__loadmore
  width 100%
  background #ddd
  border-radius 0

@media screen and (min-width: 600px)
  .chat__show-online
    display none
.chat__show-online
  position absolute
  top 0
  width 24px
  height 24px
  border-radius 0% 50% 0% 50% !important
  right 0
  z-index 2
  padding 0
  background-color #009688
  transition transform .4s ease
  &--open
    transform rotateY(180deg)

/* Hide time in messages */
@media screen and (max-width: 599px)
  .msg__time
    display none !important
