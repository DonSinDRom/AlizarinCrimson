//    bottom -1px
.track__links
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
.track__link
  font-size 12px
  text-decoration none
.track__upload-info
  font-size 10px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  color colorTrackUploadinfo
  body[theme='dark'] &
    color darkTrackUploadinfo

@media screen and (max-width: 600px)
  .track__artist
  .track__title
  .track__link
  .track__upload-info
    font-size 10px

.track__row
  display block
  width 100%
  height 100%
  &:hover .track__additional
    transition opacity .1s ease
    opacity 1
.track__base
.track__additional
  height 58px !important
  min-height 58px !important
  max-height 58px !important
  display flex
  align-items center
  justify-content center
  flex 1
  flex-flow row nowrap
  background colorTrackBG
  body[theme='dark'] &
    background darkTrackBG
.track__additional
  align-items flex-start
  flex-flow row nowrap
  align-items center
  position relative
  top -100%
  left 0
  opacity 0
  transition opacity .1s ease


.playlist--emtpy
  height 100%
  display flex
  align-items flex-start
  justify-content center
  background colorPlaylistEmtpyBG
  body[theme='dark'] &
    background darkPlaylistEmtpyBG
.playlist--empty-text
  display flex
  align-items center
  color colorPlaylistEmtpy
  body[theme='dark'] &
    color darkPlaylistEmtpy
  & svg
    width 4rem
    height 4rem
