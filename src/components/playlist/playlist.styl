.playlist__ctrl
  height 100vh
  flex-flow column wrap
.playlist
  color #000
  width 100%
.playlist__content
  height calc(100% - 97px) /* (current) 58 + 3 (progressbar) + 36 (navbar) */
@media screen and (min-width: 960px)
  .playlist__content
    height calc(100% - 61px) /* (current) 58 + 3 (progressbar) */

.playlist__list
  display block
  padding 0
.playlist__track
  border 1px solid #eee
  display flex
  flex-flow row nowrap
  align-items center
  margin-top -1px
  &:first-child
    margin-top 0
.track__img-cont
  display flex
  padding 5px
  min-width 60px
.track__img
  width 48px
  height 48px
.track__content
  display flex
  flex-flow column wrap
.track__artist
.track__title
  font-weight 600
  color rgb(51, 51, 51)
  font-size 12px
  margin 0
.track__tags
  display flex
  flex 1
  justify-content flex-end
@media screen and (max-width: 600px)
  .track__tag
    display none !important
.track__tag
  display flex
  font-size 9px
  color #fff
  border-radius 4px
  background-color #666
  padding 2px 4px
  margin 0 2px
.track__time
  display flex
  color rgb(51, 51, 51)
  font-size 12px

.track__votes-block
  display flex
  align-items center
  flex-basis 120px
  justify-content flex-end
  &.voted--up
    & .track__vote--up
    & .track__rating
      color #FECC2F
  &.voted--down
    & .track__vote--down
    & .track__rating
      color #F8091C

.track__vote--up.track__vote--up
.track__vote--down.track__vote--down
  width 40px
  height 40px
  & svg
    margin-top 2px
md-button.md-default-theme.md-fab
  background-color transparent
  box-shadow none
  &:not([disabled])
    &.focus
    &:hover
      background-color transparent
      box-shadow none

.track__rating
  font-weight 100
  font-size 23px
  color #bbb
  padding 0 2px


.playlist__toolbar
.playlist__toolbar-tools
  height 36px
  min-height 36px
  max-height 36px
  background-color #333 !important

.playlist__leftbar-swither
.playlist__rightbar-swither
  opacity .99
.playlist__leftbar-svg
  height 24px
  width 24px

.playlist__toolbar-tools
  justify-content space-between

/* Caution! Buggy thing
* Please, just ignore this
*/
.playlist__leftbar-swither
  display inline-block
  opacity 1

@media screen and (min-width: 600px)
  .playlist__toolbar-tools
    justify-content flex-end
  .playlist__leftbar-swither
    display none !important
    opacity 0
    visibility hidden

@media screen and (max-width: 600px)
  .track__time
    display none !important

@media screen and (min-width: 960px)
  .playlist__toolbar
    display none !important
