.democracy__include
.democracy__ctrl
  height 100%
  overflow-x hidden
.democracy__tabpanel-container
  display flex
.democracy__elections
.democracy__list
  color #000
  padding 12px
  display flex
  flex-flow column nowrap
.democracy__header
  font-size 13px
  font-weight bold
  margin 0
.democracy__elections-input
  font-size 12px
  margin-top 0
  & input
    width 100%
    height 36px
  &.md-input-focused
    & input
      border-color colorSecond2 !important
      height 36px
    & label
      color colorSecond2 !important

.democracy__elections-row
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-between
.democracy__elections-choice
.democracy__elections-username
  font-size 12px
.democracy__elections-btn
  background-color colorSecond2 !important
  text-transform capitalize
  color #fff

.democracy__icon
  width 20px
  height 20px

.democracy__list-row
.democracy__president-row
.democracy__president
.democracy__list-row
.democracy__moderators
.democracy__moderator
  opacity .99

.democracy__list-column
  display flex
  flex 1


.democracy__president-cont
.democracy__ban-cont
  display flex
  flex-flow row nowrap
  flex 1


.democracy__admin
  display flex
  flex-flow row wrap
  color #000
  padding 12px
.democracy__president-btn
  & button
    display flex
    align-items center


.president
.ban
.moder
.banned
  //border 1px solid
  display flex
  flex 0 0 50%
  flex-flow column wrap
@media screen and (max-width: 768px)
  .president
  .ban
  .moder
  .banned
    flex 0 0 100%

.content
  display flex
  align-items center

.ban .content
  display flex
.input--id
  display inline-block
  width 15%
  & input
    width 100%
.input--reason
  display inline-block
  width 70%
  & input
    width 100%
.ban--btn
  display inline-block
  width 15%
  text-transform none
  font-size 12px
  display flex
  background-color colorSecond2 !important
  color #fff !important
  justify-content center
  align-items center
  margin 10px 0

.democracy__moderator
  display flex
  flex-flow row nowrap
  align-items center

@media screen and (min-width: 601px)
  .democracy__tabpanel-container
    height calc(100% - 60px)
    & [role="tabpanel"]
      height calc(100% - 60px) !important
@media screen and (max-width: 600px)
  .democracy__tabpanel-container
    height calc(100% - 36px)
    & [role="tabpanel"]
      height calc(100% - 36px) !important
