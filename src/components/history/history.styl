.history
  height 100%
.history__module
  color #000
  height 100%
.history__search-grp
  height 64px /* depend with .history__content */
  width 100%
  background colorHistoryGrpBG
  & .history__checkbox--gold
    margin 0 0 0 10px
  & .history--input
    flex 1
    padding 2px
    margin 6px
  & .history--search-btn
    background-color transparent !important
    box-shadow none !important
.history__search-row
  display flex
  flex-flow row nowrap
  align-items center
  justify-content flex-start
.history__search-row--filters
  height 20px
.history__search-row--input
  height 44px

.history__content
  height -webkit-calc(100% - 64px) /* depend with .history__search-grp */
  height calc(100% - 64px) /* depend with .history__search-grp */

.histroy--emtpy
  padding 0
  margin 0
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
.history--empty-text
  display flex
  align-items center

