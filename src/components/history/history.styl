.history
  height 100%
.history__module
  color #000
  height 100%
.history__search-grp
  height 54px
  background #eee
  display flex
  flex-flow row nowrap
  align-items center
  justify-content flex-start
  & .history__checkbox--gold
    margin 0 0 0 10px
  & .history--input
    flex 1
    padding 2px
    margin 6px
  & .history--search-btn
    background-color transparent !important
    box-shadow none !important
.history__content
  height calc(100% - 56px)

.histroy--emtpy
  padding 0
  margin 0
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
.history--empty-text
  display flex
  align-items center

