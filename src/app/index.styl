@import url("http://fonts.googleapis.com/css?family=Open\+Sans:400,700|Roboto:400,700,700italic,400italic")
@import '_stylus/_mixins.styl';
@import '_stylus/_variables.styl';

@charset "UTF-8";

html
  font-family 'Open Sans', sans-serif !important
  width 100vw
  height 100%
  overflow hidden
  font-size 16px
@media screen and (max-width: 599px)
  html
    font-size 14px
@media (min-width: 600px) and (max-width: 959px)
  html
    font-size 15px
*
  -webkit-user-select initial !important
/* material angular is broke user-select */

/* Custom scrollbar - doesn't work in Firefox */
::-webkit-scrollbar
  width 4px
/* Track */
::-webkit-scrollbar-track
  box-shadow none
  border-radius 0
  background #eee
/* Handle */
::-webkit-scrollbar-thumb
  border-radius 0
  box-shadow none
  background #bbb

/*
.perf
  transform translate3d(0,0,0)
*/


[layout=row]
  flex-direction row


/* Typography - will delete it later */
/*
* t-(a || b)-{type}
* t == typography
* b == before
* a == :after
* type == space, semicolon or others
*/
.t-a-semicolon
  &:after
    content ':'
.t-b-space
  &:before
    content ' '
.t-b-space-hyphen-space
  &:before
    content ' - '
.t-a-space-hyphen-space
  &:after
    content ' - '

object
svg
  fill currentColor
  color currentColor

.viewport
  height 100%
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  width 100%

.h
  height 100%

