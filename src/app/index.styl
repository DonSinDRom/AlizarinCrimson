[layout=row]
  flex-direction row


/*
* t-(a || b)-{type}
* t == typography
* b == before
* a == :after
* type == space, semicolon or others
*/
.t-a-semicolon
  &:after
    content ':'
.t-b-space
  &:before
    content ' '
.t-b-space-hyphen-space
  &:before
    content ' - '
.t-a-space-hyphen-space
  &:after
    content ' - '


