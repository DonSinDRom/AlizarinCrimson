md-input-group
  & input
  &.md-input-focused
    & input
      border-color #009688 !important
    & label
      color #009688 !important

[layout=row]
  flex-direction row


/*
* t-(a || b)-{type}
* t == typography
* b == before
* a == :after
* type == space, semicolon or others
*/
.t-a-semicolon
  &:after
    content ':'
.t-b-space
  &:before
    content ' '
.t-b-space-hyphen-space
  &:before
    content ' - '
.t-a-space-hyphen-space
  &:after
    content ' - '

object
svg
  fill currentColor
  color currentColor

.viewport
  height 100%
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  width 100%

