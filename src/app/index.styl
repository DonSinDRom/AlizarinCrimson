body
  background-color colorBodyBG

md-card.md-default-theme
  background-color colorMdCardBG

.md-sidenav-right.md-locked-open
  width initial !important
  min-width initial !important
  max-width initial !important

/* Link's default color */
a
  color colorSecond2

md-content.md-default-theme
  background-color colorMdContentBG

md-input-group
md-input-container
  & input
  &.md-input-focused
    & input
      border-color colorThird1 !important
    & label
      color colorThird1 !important

md-slider.md-default-theme .md-track.md-track-fill
  background colorThird1 !important

/* Console style */
.md-sidenav-left
  background colorGray1
  width 150px !important
  min-width 150px !important
  height 100%
  & md-content.md-default-theme
    background colorGray1
.md-sidenav-right
  height 100%

@media screen and (max-width: 600px)
  .md-sidenav-right
    z-index 64
    width 100% !important
    min-width 100% !important
    height -webkit-calc(100% - 36px)
    height calc(100% - 36px)
    top 36px
    overflow hidden
    position fixed !important

@media (min-width: 600px) and (max-width: 959px)
  .md-sidenav-right
    position fixed !important
    width -webkit-calc(100% - 150px) !important
    width calc(100% - 150px) !important
    min-width -webkit-calc(100% - 150px) !important
    min-width calc(100% - 150px) !important
    top 36px
    height -webkit-calc(100% - 36px)
    height calc(100% - 36px)
    overflow hidden
    z-index 64
  .console__ctrl
    height -webkit-calc(100% - 72px)
    height calc(100% - 72px)
    overflow hidden
  .md-sidenav-left
    top 36px
@media screen and (min-width: 960px)
  .md-sidenav-right
    display flex !important
    flex 3 !important
    z-index 64

.viewport--H
  height 100%
  width 100%
  display flex
  flex-flow row nowrap

/* Info panels */
.tabsdemoStaticTabs .tabpanel-container
  display block
  position relative
  border none
  height -webkit-calc(100% - 60px)
  height calc(100% - 60px)
  overflow hidden
@media screen and (max-width: 960px)
  .tabsdemoStaticTabs .tabpanel-container
    height -webkit-calc(100% - 96px)
    height calc(100% - 96px)

.tabsdemoStaticTabs [role="tabpanel"]
  overflow auto
  width 100%
  height 100%
  transition all cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.5s
  position absolute
.tabsdemoStaticTabs [role="tabpanel"].ng-leave.ng-leave-active
.tabsdemoStaticTabs [role="tabpanel"].ng-enter
  top -300px
.tabsdemoStaticTabs [role="tabpanel"].ng-leave
.tabsdemoStaticTabs [role="tabpanel"].ng-enter.ng-enter-active
  top 0
.tabsdemoStaticTabs [role="tabpanel"].ng-leave
  z-index 100
.tabsdemoStaticTabs .md-header
  background-color colorTabBG !important
  overflow-x hidden
.tabsdemoStaticTabs .md-header-items-container
  left 0 !important
  right 0 !important
.tabsdemoStaticTabs .md-header-items-container .md-header-items
  border-bottom 3px solid colorTabBorder
  -webkit-transform none !important
  transform none !important
  width 100% !important
.tabsdemoStaticTabs md-tab
  color colorTab !important
  text-transform none
  background-color colorTabBG
  border-right 1px solid colorTabBorder
  &:focus
    border-right 1px solid colorTabFocusBorder
    border-left 1px solid colorTabFocusBorder
    border-top none
    border-bottom none
    border-color colorTabFocusBorder !important
  &:first-child
    border-left 1px solid colorTabFocusBorder
.tabsdemoStaticTabs md-tab
  box-sizing content-box
.tabsdemoStaticTabs md-tab.active
.tabsdemoStaticTabs md-tab:focus
  border-bottom 3px solid colorTabActiveBorder
  color colorTabActive !important
  background-color colorTabActiveBG !important
.tabsdemoStaticTabs md-tab:hover
  border-bottom 3px solid colorTabHoverBorder
.tabsdemoStaticTabs md-tab[disabled]
  opacity 0.5
.tabsdemoStaticTabs md-tab .md-ripple-container
  color colorThird1 !important
.tabsdemoStaticTabs .md-header .md-ripple
  border-color colorThird1 !important
.tabsdemoStaticTabs md-tabs-ink-bar
  background-color colorThird1 !important
  height 3px

@media screen and (min-width: 601px)
  .tabsdemoStaticTabs .md-header
    height 60px
  .tabsdemoStaticTabs .md-header-items-container
    height 60px
@media screen and (max-width: 600px)
  .tabsdemoStaticTabs .md-header
    height 36px
  .tabsdemoStaticTabs .md-header-items-container
    height 36px

