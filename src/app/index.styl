@import url("http://fonts.googleapis.com/css?family=Roboto\+Slab:400,700|Roboto:400,700,700italic,400italic")

html
  font-family 'Roboto Slab', serif

[layout=row]
  flex-direction row

.viewport
  height 100%

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

.thumbnail
  height 200px
  img
    &.pull-right
      width 50px

md-toolbar
  &.md-default-theme
    background-color black

section
  &.jumbotron
    margin-bottom 30px
    padding 1px 30px
    background-color #5aadbb
    text-align center
    color white
    h1
      font-size 3em

.techs
  display flex
  flex-flow row wrap
  md-card
    width 30%
    img
      &.pull-right
        float right
        width 50px
// injector
// endinjector


.console
  & md-slider
    width 85%
    & .md-track
      background-color #777
      border-radius 5px
    & .md-track-container
      height 8px
    & .md-track-fill
      background-color #fff
    & .md-thumb
      top 8px
      &:after
        border-color #000
        background-color #fff
    & .md-focus-thumb
      background-color #fff
    & .md-focus-ring
      background-color #fff
      top 2px

.switcher
  height 100px
  &.play
    & .c
      fill #FFE780
    & .b3
      animation-name dance
      animation-duration 1s
      animation-delay 1s
      animation-fill-mode both
      animation-iteration-count infinite
    & .b2
      animation-name dance
      animation-duration 1s
      animation-delay .66s
      animation-fill-mode both
      animation-iteration-count infinite
    & .b1
      animation-name dance
      animation-duration 1s
      animation-delay .33s
      animation-fill-mode both
      animation-iteration-count infinite
@keyframes dance
  0%
    stroke #FFE780
  100%
    stroke #FFCC00


.viewport--H
  height 100vh
  width 100%


.playlist
  color #000
  height 100vh
  width 100%
.playlist__list
  display block
  padding 0
.playlist__track
  border 1px solid #eee
  display flex
  flex-flow row nowrap
  align-items center
  margin-top -1px
  &:first-child
    margin-top 0
.track__img-cont
  display flex
  padding 5px
.track__img
  width 48px
  height 48px
.track__content
  display flex
  flex-flow column wrap
.track__artist
.track__title
  font-weight 600
  color rgb(51, 51, 51)
  font-size 12px
  font-family 'Open Sans', sans-serif
  margin 0
.track__tags
  display flex
  flex 1
.track__tag
  display flex
.track__time
  display flex
  color rgb(51, 51, 51)
  font-size 12px
  font-family 'Open Sans', sans-serif
.track__votes-block
  display flex
  align-items center
  flex-basis 120px
  justify-content flex-end
.track__vote--up.track__vote--up
.track__vote--down.track__vote--down
  width 40px
  height 40px
  & svg
    margin-top 2px
md-button.md-default-theme.md-fab
  background-color transparent
  box-shadow none
  &:not([disabled])
    &.focus
    &:hover
      background-color transparent
      box-shadow none

.track__rating
  font-family 'Open Sans', sans-serif
  font-weight 100
  font-size 23px
  color #bbb
  padding 0 2px
