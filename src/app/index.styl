.tabsdemoStaticTabs
  opacity 1
  & #tabHistory-content
    background-color #eee
  & #tabDemocracy-content
    background-color #eee
  & #tabProfile-content
    background-color #eee
.tabsdemoStaticTabs .tabpanel-container
  display block
  position relative
  background white
  border 0px solid black
  height calc(100vh - 60px)
  overflow hidden
@media screen and (max-width: 960px)
  .tabsdemoStaticTabs .tabpanel-container
    height calc(100vh - 96px)

.tabsdemoStaticTabs [role="tabpanel"]
  color white
  overflow auto
  width 100%
  height 100%
  transition all cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.5s
  position absolute
.tabsdemoStaticTabs [role="tabpanel"].ng-leave.ng-leave-active
.tabsdemoStaticTabs [role="tabpanel"].ng-enter
  top -300px
.tabsdemoStaticTabs [role="tabpanel"].ng-leave
.tabsdemoStaticTabs [role="tabpanel"].ng-enter.ng-enter-active
  top 0
.tabsdemoStaticTabs [role="tabpanel"].ng-leave
  z-index 100
.tabsdemoStaticTabs .md-header
  background-color #fff !important
  overflow-x hidden
.tabsdemoStaticTabs .md-header-items-container
  left 0 !important
  right 0 !important
.tabsdemoStaticTabs .md-header-items-container .md-header-items
  border-bottom 3px solid #bbb
  -webkit-transform none !important
  transform none !important
  width 100% !important
.tabsdemoStaticTabs md-tab
  color #bbb !important
  text-transform none
  border-right 1px solid #eee
  &:focus
    border-right 1px solid #eee
    border-left 1px solid #eee
    border-top none
    border-bottom none
    border-color #eee !important
  &:first-child
    border-left 1px solid #eee
.tabsdemoStaticTabs md-tab
  box-sizing content-box
.tabsdemoStaticTabs md-tab.active
.tabsdemoStaticTabs md-tab:focus
  color #333 !important
.tabsdemoStaticTabs md-tab:hover
  border-bottom 3px solid #333
.tabsdemoStaticTabs md-tab[disabled]
  opacity 0.5
.tabsdemoStaticTabs md-tab .md-ripple-container
  color #FFCD00 !important
.tabsdemoStaticTabs .md-header .md-ripple
  border-color #FFCD00 !important
.tabsdemoStaticTabs md-tabs-ink-bar
  background-color #FFCD00 !important
  height 3px

@media screen and (min-width: 601px)
  .tabsdemoStaticTabs .md-header
    height 60px
  .tabsdemoStaticTabs .md-header-items-container
    height 60px
@media screen and (max-width: 600px)
  .tabsdemoStaticTabs .md-header
    height 36px
  .tabsdemoStaticTabs .md-header-items-container
    height 36px

md-tab
  min-width initial !important
  width initial !important
  max-width initial !important
  margin initial !important
  padding 0
  flex 1
md-checkbox.md-default-theme.md-checked
  & .md-icon
    background-color #009688 !important
md-checkbox.md-default-theme .md-ripple
  background-color #009688 !important
md-checkbox .md-label
  border none !important

