.md-sidenav-left
  background #333
  width 150px
  min-width 150px
  & md-content.md-default-theme
    background-color #333
.md-sidenav-right
  width 120%
  z-index 6

@media screen and (max-width: 600px)
  .md-sidenav-right
    position fixed !important
    width 100%
    top 36px
    height calc(100vh - 36px)
    overflow hidden
    z-index 7

@media (min-width: 600px) and (max-width: 960px)
  .md-sidenav-right
    position fixed !important
    width calc(100% - 150px)
    top 36px
    height calc(100vh - 36px)
    overflow hidden
    z-index 7
  .console__ctrl
    height calc(100vh - 72px)
    overflow hidden
  .md-sidenav-left
    top 36px

.viewport--H
  height 100vh
  width 100%

.tabsdemoStaticTabs
  opacity 1
  & #tabHistory-content
    background-color #673AB7
  & #tabDemocracy-content
    background-color #00796B
  & #tabProfile-content
    background-color #f0f
.tabsdemoStaticTabs .tabpanel-container
  display block
  position relative
  background white
  border 0px solid black
  height calc(100vh - 60px)
  overflow hidden
@media screen and (max-width: 960px)
  .tabsdemoStaticTabs .tabpanel-container
    height calc(100vh - 96px)

.tabsdemoStaticTabs [role="tabpanel"]
  color white
  overflow auto
  width 100%
  height 100%
  transition all cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.5s
  position absolute
.tabsdemoStaticTabs [role="tabpanel"].ng-leave.ng-leave-active
.tabsdemoStaticTabs [role="tabpanel"].ng-enter
  top -300px
.tabsdemoStaticTabs [role="tabpanel"].ng-leave
.tabsdemoStaticTabs [role="tabpanel"].ng-enter.ng-enter-active
  top 0
.tabsdemoStaticTabs [role="tabpanel"].ng-leave
  z-index 100
.tabsdemoStaticTabs .md-header
  background-color #fff !important
  height 60px
.tabsdemoStaticTabs .md-header-items-container
  left 0 !important
  right 0 !important
  height 60px
.tabsdemoStaticTabs .md-header-items-container .md-header-items
  border-bottom 3px solid #bbb
  -webkit-transform none !important
  transform none !important
  width 100% !important
.tabsdemoStaticTabs md-tab
  color #bbb !important
  text-transform none
  border-right 1px solid #eee
  &:focus
    border-right 1px solid #eee
    border-left 1px solid #eee
    border-top none
    border-bottom none
    border-color #eee !important
  &:first-child
    border-left 1px solid #eee
.tabsdemoStaticTabs md-tab
  box-sizing content-box
.tabsdemoStaticTabs md-tab.active
.tabsdemoStaticTabs md-tab:focus
  color #333 !important
.tabsdemoStaticTabs md-tab:hover
  border-bottom 3px solid #333
.tabsdemoStaticTabs md-tab[disabled]
  opacity 0.5
.tabsdemoStaticTabs md-tab .md-ripple-container
  color #FFCD00 !important
.tabsdemoStaticTabs .md-header .md-ripple
  border-color #FFCD00 !important
.tabsdemoStaticTabs md-tabs-ink-bar
  background-color #FFCD00 !important
  height 3px

md-tab
  min-width initial !important
